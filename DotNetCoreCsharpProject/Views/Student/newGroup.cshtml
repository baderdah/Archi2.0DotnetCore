@model List<DotNetCoreCsharpProject.Entities.Students>

@{
    ViewData["Title"] = "newGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nouveau groupe</h1>


<form action="addNewGroup" method="post" class="container-fluid bg-dark text-white p-4">
    @if (Model.Count() > 0)
    {
        <div>
            <table id="tblStudent" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th align="left" class="productth text-white">Nom</th>
                        <th align="left" class="productth text-white">Email</th>
                        <th align="left" class="productth text-white">Phone</th>
                        <th align="left" class="productth text-white">Ajouter à mon Groupe </th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            string boxName = "std" + @item.Id;
                            <tr>
                                <td class="prtoducttd text-white">@item.IdUserNavigation.LastName @item.IdUserNavigation.FirstName</td>
                                <td class="prtoducttd text-white">@item.IdUserNavigation.Email </td>
                                <td class="prtoducttd text-white">@item.IdUserNavigation.PhoneNumber </td>
                                <td class="prtoducttd text-white"><input type="checkbox" name="stdid" value=@boxName /></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        }
       
        <div class="form-horizontal">
            <h3 style="color:chocolate">Infos sur le sujet</h3>
            <div class="form-group">
                <label class="control-label col-sm-2" for="sujet">Sujet de projet:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="sujet" id="sujet" placeholder="Enter sujet de projet">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="sujetDesc">Description:</label>
                <div class="col-sm-10">
                    <textarea cols="10" class="form-control" name="sujetDesc" id="sujetDesc" placeholder="Décrire le projet en qlq mots"></textarea>
                </div>
            </div>
            <h3 style="color:coral">Société d'accueil</h3>
            <div class="form-group">
                <label class="control-label col-sm-2" for="societe">Société d'accueil:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="societe" name="nomSociete" placeholder="Nom de la sociéte d'accueil">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="tele">Telephone:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="tele" name="tele" placeholder="Télephone de l'entreprise">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="ville">Ville:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ville" name="ville" placeholder="ville d'accueil">
                </div>
            </div>

            <h3 style="color:burlywood">Maitre tuteur</h3>
            <div class="form-group">
                <label class="control-label col-sm-2" for="mailEnc">Nom tuteur:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="nomEnc" id="nomEnc" placeholder="Enter le nom tuteur">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="mailEnc">Email tuteur:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="mailEnc" name="mailEnc" placeholder="Enter mail tuteur">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="tele2">Telephone:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="tele2" name="teleEnc" placeholder="Télephone de l'encadrant">
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn-lg btn-primary">Submit</button>
                </div>
            </div>

        </div>
    </form>





